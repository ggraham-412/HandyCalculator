<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/LightHardOrange"
                android:endColor="@color/LightHardOrange"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Grey8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/buttonVertPadding"
                android:top="@dimen/buttonHorizPadding"
                android:right="@dimen/buttonVertPadding"
                android:bottom="@dimen/buttonHorizPadding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/LightHardOrange"
                android:endColor="@color/LightHardOrange"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Grey8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/buttonVertPadding"
                android:top="@dimen/buttonHorizPadding"
                android:right="@dimen/buttonVertPadding"
                android:bottom="@dimen/buttonHorizPadding" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="@color/Grey8"
                android:endColor="@color/Grey8"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Grey8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/buttonVertPadding"
                android:top="@dimen/buttonHorizPadding"
                android:right="@dimen/buttonVertPadding"
                android:bottom="@dimen/buttonHorizPadding" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/MediumOrangeRedL"
                android:endColor="@color/MediumOrangeRedD"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/Grey8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="@dimen/buttonVertPadding"
                android:top="@dimen/buttonHorizPadding"
                android:right="@dimen/buttonVertPadding"
                android:bottom="@dimen/buttonHorizPadding" />
        </shape>
    </item>

</selector>